<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Set maximum request length to 4MB (4096 KB) to prevent large file DoS attacks. -->
    <httpRuntime targetFramework="4.7.2" maxRequestLength="4096" />
    <compilation debug="true" targetFramework="4.7.2" />
    <!-- Use RemoteOnly to prevent detailed errors from leaking sensitive information to external users -->
    <customErrors mode="RemoteOnly" defaultRedirect="~/Error/Index" />
  </system.web>
  
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
    <modules runAllManagedModulesForAllRequests="true" />
    
    <security>
      <requestFiltering>
        <!-- Limit content length to 4MB (4194304 bytes) for granular control over upload size -->
        <requestLimits maxAllowedContentLength="4194304" />
      </requestFiltering>
    </security>
  </system.webServer>
  
  <appSettings>
    <!-- Define the secure storage path for uploads. App_Data is generally protected from direct HTTP access. -->
    <add key="ProfilePictureStoragePath" value="~/ProfileImages/" />
    <!-- Define allowed extensions for security (Whitelisting) -->
    <add key="AllowedImageExtensions" value=".jpg,.jpeg,.png,.gif" />
    <!-- Define maximum file size for application logic validation -->
    <add key="MaxFileSizeMB" value="2" />
  </appSettings>
</configuration>