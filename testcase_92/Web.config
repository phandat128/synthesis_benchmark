<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- 
    SECURE CONFIGURATION:
    1. The path points to 'App_Data', which is typically protected by IIS and prevents direct execution of files within it.
    2. The application pool identity must only have WRITE permissions to this directory, and NO EXECUTE permissions.
    -->
    <add key="AvatarUploadPath" value="~/App_Data/Avatars/" />
    
    <!-- Security settings for file upload validation -->
    <add key="MaxFileSizeMB" value="5" />
    <add key="AllowedExtensions" value=".jpg,.jpeg,.png,.gif" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.7.2" />
    <httpRuntime targetFramework="4.7.2" />
  </system.web>
  <system.webServer>
    <handlers>
      <remove name="ExtensionlessUrlHandler-Integrated-4.0" />
      <remove name="OPTIONSVerbHandler" />
      <remove name="TRACEVerbHandler" />
      <add name="ExtensionlessUrlHandler-Integrated-4.0" path="*." verb="*" type="System.Web.Handlers.TransferRequestHandler" preCondition="integratedMode,runtimeVersionv4.0" />
    </handlers>
  </system.webServer>
</configuration>